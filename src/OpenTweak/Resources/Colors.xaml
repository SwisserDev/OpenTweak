<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundDark">#1a1a1a</Color>
    <Color x:Key="BackgroundMedium">#242424</Color>
    <Color x:Key="BackgroundLight">#2d2d2d</Color>
    <Color x:Key="BackgroundCard">#1e1e1e</Color>

    <Color x:Key="BorderColor">#3d3d3d</Color>
    <Color x:Key="BorderHover">#4d4d4d</Color>

    <Color x:Key="TextPrimary">#ffffff</Color>
    <Color x:Key="TextSecondary">#a0a0a0</Color>
    <Color x:Key="TextMuted">#666666</Color>

    <Color x:Key="AccentGreen">#22c55e</Color>
    <Color x:Key="AccentGreenHover">#16a34a</Color>
    <Color x:Key="AccentBlue">#3b82f6</Color>
    <Color x:Key="AccentYellow">#eab308</Color>
    <Color x:Key="AccentRed">#ef4444</Color>
    <Color x:Key="AccentOrange">#f97316</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCard}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHover}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentGreenHoverBrush" Color="{StaticResource AccentGreenHover}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>

    <!-- Effectiveness Rating Colors -->
    <SolidColorBrush x:Key="EffectiveColor" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="MinimalColor" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="PlaceboColor" Color="{StaticResource AccentRed}"/>

</ResourceDictionary>
