<Application x:Class="OpenTweak.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:OpenTweak.Helpers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <helpers:InvertBoolToVisibilityConverter x:Key="InvertBoolToVis"/>
            <helpers:InvertBoolConverter x:Key="InvertBool"/>
            <helpers:BoolToAdminBrushConverter x:Key="BoolToAdminBrush"/>
            <helpers:BoolToAdminTextConverter x:Key="BoolToAdminText"/>
            <helpers:BoolToLogButtonConverter x:Key="BoolToLogButton"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
